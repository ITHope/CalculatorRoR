<input type="button" value="=" id="btnRes" onclick="fOp(this)" />

<%= form_tag("/", method:"post") do %>
  <%= hidden_field_tag :a, @a %>
  <%= hidden_field_tag :b, @b %>
  <%= hidden_field_tag :op, @op %>
  <%= submit_tag("Calc") %>
  <% end %>
  <%= @res %>

<script type="text/javascript">
    var aTxt;
    var bTxt;
    var opStr;
    function fNum(p)
    {
        tbCalc.value += p.value;
    }
    function fOp(p)
    {
        if (p.value == '=')
        {
            var aNum = parseInt(aTxt);
            var bNum = parseInt(tbCalc.value);
            var oPer = opStr;
            var res = CalcN(aNum, bNum, oPer);
            tbCalc.value = res;
        }
        else
        {
            aTxt = tbCalc.value;
            tbCalc.value = "";
            opStr = p.value;
        }
    }
</script>
